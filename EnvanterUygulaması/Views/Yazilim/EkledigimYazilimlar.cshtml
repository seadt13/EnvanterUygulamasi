@model List<EnvanterUygulaması.ViewModels.YazilimVM>

<div class="mt-5 align-items-center">
    <h3 class="text-center">Eklediğim Yazılımlar</h3>
    <div class="input-group mt-3 mb-3">
        <input type="text" class="form-control" placeholder="Arama" aria-label="search" aria-describedby="basic-addon1">
        &ensp;
         <a href="#" class="float-end">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
            </svg>
         </a>
    </div>
    <a href="#" class="link-underline-primary float-end">Detaylı Arama</a>
</div>

<button id="redirectButton" class="btn btn-primary" href="/Yazilim/YazilimEkle@0">Yazılım Ekle</button>
<script>
    document.getElementById("redirectButton").addEventListener("click", function () {
        window.location.href = "/Yazilim/YazilimEkle";
    });
</script>

<div class="mt-2 card table-responsive">
    <table class="table table-bordered table-striped" id="donanimMarkaTablo">
        <thead>
            <tr class="text-center">
                <th>İşlem</th>
                <th>Markası</th>
                <th>Adı</th>
                <th>Versiyonu</th>
                <th>Türü</th>
                <th>Cihaz Sayısı</th>
                <th>Alım Tarihi</th>
                <th>Destek Süresi</th>
                <th>Açıklama</th>
                <th>Ekleyen Kullanıcı</th>
                <th>Birim</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="custom-container">
                        <a class="btn btn-primary" style="height: 35px; width: 85px;" href="/yazilim/yazilimekle/@item.id">Düzenle</a>
                        &ensp;
                        <a class="btn btn-danger" style="height: 35px; width: 85px;" href="/yazilim/yazilimkaldir/@item.id">Kaldır</a>
                    </td>
                    <td>@item.Markasi</td>
                    <td>@item.Adi</td>
                    <td>@item.Versiyonu</td>
                    <td>@item.Turu</td>
                    <td>@item.CihazSayisi</td>
                    <td>@item.AlimTarihi</td>
                    <td>@item.DestekSuresi ay</td>
                    <td>@item.Aciklama</td>
                    <td>@item.EkleyenKullanici</td>
                    <td>@item.BolgeId</td>
                </tr>
            }
        </tbody>
    </table>
      </div>